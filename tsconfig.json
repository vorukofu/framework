{
  "compilerOptions": {
    /* Project */
    "target": "es6",
    "module": "es6",
    "moduleResolution": "bundler",
    /* Pathes */
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    /* Builder */
    "sourceMap": true,
    "declaration": false,
    "emitDeclarationOnly": false,
    /* Linting */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
